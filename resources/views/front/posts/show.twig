{% extends "layouts/default.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <div class="section section-bg-blog-{{ random(1,4) }} pt-26 pb-26">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="section-title uppercase white text-center fw-normal fz-56 lh-68 ls-6 mb-3">{{ post.title }}</h2>
                    <p class="text-center fw-600 fz-14 white">
                        {{ post.author }} | {{ dateHumanize(post.updated_at) }}
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="section mt-3">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div> Auteur : <span class="color">{{ post.author }}</span> |  {{ dateHumanize(post.updated_at) }}</div>
                    <div class="blog-body pt-4">

                         <h3 class="mb-3">{{ post.subtitle }}</h3>
                         {{ post.content | raw}}

                    {% include('front/comments/index.twig') %}

                </div>
            </div>
        </div>
    </div>
    <div class="section bg-gray-lighter border-top pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <a href="{{ path('posts.show', {slug: 'link', id: increment(post.id) }) }}" class="button-nav">
                        <div class="icon"><i class="fa fa-angle-left"></i></div>
                        <div class="info">
                            <div class="content">Article Précédent</div>
                        </div>
                    </a>
                    <a href="{{ path('posts.index') }}" class="button-home">
                        <span class="home-square"></span>
                        <span class="home-square"></span>
                        <span class="home-square"></span>
                        <span class="home-square"></span>
                        <span class="home-square"></span>
                        <span class="home-square"></span>
                        <span class="home-square"></span>
                        <span class="home-square"></span>
                        <span class="home-square"></span>
                    </a>
                    <a href="{{ path('posts.show', {slug: 'link', id: decrement(post.id) }) }}" class="button-nav right">
                        <div class="icon"><i class="fa fa-angle-right"></i></div>
                        <div class="info">
                            <div class="content">Article Suivant</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}