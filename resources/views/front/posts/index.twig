{% extends "layouts/default.twig" %}

{% block title %}Contact{% endblock %}

{% block content %}
    <div class="section section-bg-blog-{{ random(1,4) }} pt-33 pb-18">
        <h2 class="section-title text-center white blured fw-bolder fz-68 lh-68 ls-10 mb-3">Les news</h2>
    </div>
    <div class="section mt-3">
        <div class="container-fluid">
            <div class="row">
                <div class="masonry-grid-post">
                    {% for post in posts %}
                        <div class="col-md-4 col-sm-6 masonry-item">
                            <div class="blog-item style-5">
                                <div class="blog-media">
                                    <a href="{{ path('posts.show', {slug: post.slug, id: post.id}) }}"><figure><img src="{{ post.thumbnail }}" alt="{{ post.subtitle }}"></figure></a>
                                </div>
                                <div class="blog-content">
                                    <h3><a href="{{ path('posts.show', {slug: post.slug, id: post.id}) }}">{{ post.title }}</a></h3>
                                    <h5>{{ post.subtitle | excerpt(10) }}</h5>
                                    <p>
                                        {{ post.content | excerpt(255) }}
                                    </p>
                                </div>
                                <div class="blog-info">
                                    <div class="date">
                                        <i class="fa fa-calendar"></i>
                                        {{ dateHumanize(post.updated_at) }}
                                    </div>
                                    <div class="tag">
                                        <i class="fa fa-tag"></i>
                                        {{ post.author }}
                                    </div>
                                    <a class="readmore" href="{{ path('posts.show', {slug: post.slug, id: post.id}) }}">Lire la suite</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-sm-12">
                    <div class="pagination-container">
                        {% include('front/elements/pagination.twig') %}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}